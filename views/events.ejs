<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles/style.css">
    <script src="https://kit.fontawesome.com/8093dc5ac1.js" crossorigin="anonymous"></script>
    <title>Template</title>
</head>

<body>

    <%- include ('partials/header.ejs') %>
    <%- include ('partials/nav.ejs') %>

    <div id="date-container">
        <div id="blackHeader">
            <i class="fa fa-angle-left" id="leftArrow"></i>
            <span id="monthElement"></span>
            <span id="yearElement"></span>
            <i class="fa fa-angle-right" id="rightArrow"></i>
        </div>

        <div id="pinkHeader">
            <ul id="weekdays">
                <li>M</li>
                <li>T</li>
                <li>W</li>
                <li>T</li>
                <li>F</li>
                <li>S</li>
                <li>S</li>
            </ul>

            <ul id="dateOfWeek">
                <li id="monday"></li>
                <li id="tuesday"></li>
                <li id="wednesday"></li>
                <li id="thursday"></li>
                <li id="friday"></li>
                <li id="saturday"></li>
                <li id="sunday"></li>
            </ul>

        </div>

    </div>

    <form method="post" autocomplete="off" action="/events" id="theForm">
        <input maxlength="70" required type="text" name="event[title]" id="event">
        <input required type="date" name="event[time]" id="time">
        <input type="submit" value="+" id="addEvent">

    </form>

    <div class="eventContainer"></div>

    <%- include ('partials/footer.ejs') %>

    <script src="./js/app.js"></script>

</body>

</html>