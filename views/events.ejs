<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
    <script src="https://kit.fontawesome.com/8093dc5ac1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="styles/style.css">
    <title>Events</title>
</head>

<body id="eventsBody" >

    <div id="headerAndNav">
        <%- include ('partials/nav.ejs') %>
        <%- include ('partials/header.ejs') %>
    </div>


    <div id="date-container">
        <div id="blackHeader">
            <i class="fa fa-angle-left" id="leftArrow"></i>
            <span id="weekElement"></span>
            <span id="monthElement"></span>
            <span id="yearElement"></span>
            <i class="fa fa-angle-right" id="rightArrow"></i>
        </div>

        <div id="pinkHeader">
            <ul id="weekdays">
                <li class="monday">M</li>
                <li class="tuesday">T</li>
                <li class="wednesday">W</li>
                <li class="thursday">T</li>
                <li class="friday">F</li>
                <li class="saturday">S</li>
                <li class="sunday">S</li>
            </ul>

            <ul id="dateOfWeek">
                <li class="monday"></li>
                <li class="tuesday"></li>
                <li class="wednesday"></li>
                <li class="thursday"></li>
                <li class="friday"></li>
                <li class="saturday"></li>
                <li class="sunday"></li>
            </ul>

        </div>

    </div>

    <form method="post" autocomplete="off" action="/events" id="theForm">
        <input maxlength="70" required type="text" name="event[title]" id="event">
        <input type="date" required name="event[time]" id="time">
        <input type="submit" value="+" id="addEvent">

    </form>

    <div class="eventContainer"></div>

    <%- include ('partials/footer.ejs') %>

    <script src="./js/app.js"></script>

</body>

</html>